<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="fill_parent" 
    android:layout_width="fill_parent" 
    android:id="@+id/relativelayout1" 
    android:background="@drawable/bg1"
    android:scaleType="matrix"
    xmlns:tools="http://schemas.android.com/tools" 
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context="com.example.suraksha.Editcontact">
<ScrollView 
    android:layout_height="fill_parent" 
    android:layout_width="match_parent"
    android:scaleType="matrix"
    android:id="@+id/scrollView1" 
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

	<LinearLayout
	    android:layout_height="fill_parent"
	    android:layout_width="fill_parent"
	    android:orientation="vertical"
	    android:layout_marginLeft="12dp"
	    android:layout_marginBottom="12dp"
	    android:layout_marginRight="12dp"
	    android:layout_marginTop="0dp"
		android:weightSum="1">

	<ImageView 
	    android:layout_height="80dp"
	    android:layout_width="80dp" 
	    android:background="@drawable/ic_launcher" 
	    android:layout_gravity="center_horizontal" 
	    android:layout_marginTop="70dp"/>

	<EditText
	    android:id="@+id/contact1"
	    android:layout_height="35dp" 
	    android:layout_width="fill_parent"
	    android:layout_marginTop="15dp"
	    android:paddingLeft="100dp"
		android:background="@layout/border1"
		android:layout_gravity="center"
		android:hint="Contact Number 1"
		android:inputType="number"

		/>

	<EditText 
	    android:id="@+id/contact2"
	    android:layout_height="35dp" 
	    android:layout_width="fill_parent"
	    android:layout_marginTop="5dp"
	    android:paddingLeft="100dp"
		android:background="@layout/border1"
		android:hint="Contact Number 2"
		android:inputType="number"/>

	<EditText 
	    android:id="@+id/contact3"
	    android:layout_height="35dp" 
	    android:layout_width="fill_parent" 
	    android:layout_marginTop="5dp"
	    android:paddingLeft="100dp"
		android:background="@layout/border1"
		android:hint="Contact Number 3"
		android:inputType="number"/>

		<EditText
	    android:id="@+id/contact4"
	    android:layout_height="35dp" 
	    android:layout_width="fill_parent" 
	    android:layout_marginTop="5dp"
	    android:paddingLeft="100dp"
			android:background="@layout/border1"
			android:hint="Contact Number 4"
			android:inputType="number"/>

		<EditText
	    android:id="@+id/contact5"
	    android:layout_height="35dp" 
	    android:layout_width="fill_parent" 
	    android:layout_marginTop="5dp"
	    android:paddingLeft="100dp"
			android:background="@layout/border1"
			android:hint="Contact Number 5"
			android:inputType="number"/>

		<Button
			android:id="@+id/consubmit"
			android:layout_width="150dp"
			android:layout_height="38dp"
			android:layout_gravity="center_horizontal"
			android:layout_marginTop="15dp"
			android:layout_weight="0.31"
			android:background="@layout/buttonpress"
			android:text="Submit"
			android:textColor="#000000" />

	</LinearLayout>
	</ScrollView>
</RelativeLayout>