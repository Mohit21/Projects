<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="match_parent" android:layout_width="fill_parent"
    android:id="@+id/scrollView1"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/bg1"
    android:scaleType="matrix"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.suraksha.ForgotPassword" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="35dp"
            android:background="@drawable/ic_launcher" />

        <TextView
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:background="@layout/border"
            android:gravity="center_vertical|center_horizontal"
            android:text="Enter Your Email Address"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold" />
        <EditText
            android:layout_width="250dp"
            android:id="@+id/Fpmail"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:background="@layout/border1"
            android:hint="EMAIL"
            android:inputType="textEmailAddress"
            android:textColor="#000000" />

        <Button
            android:id="@+id/fLogin1"
            android:layout_width="190dp"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:text="Get Password"
            android:textColor="#000000"
            android:textSize="20dp"
            android:background="@layout/buttonpress"/>
    </LinearLayout>

</RelativeLayout>


