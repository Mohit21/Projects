<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:layout_height="match_parent" android:layout_width="fill_parent" 
    android:id="@+id/scrollView1"
    xmlns:tools="http://schemas.android.com/tools" 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/welcome"
    android:scaleType="matrix"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" 
    tools:context="com.example.suraksha.Welcome" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="34dp"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="0dp"
            android:gravity="center"
            android:background="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/wwel"
            android:layout_width="match_parent"
            android:background="@layout/border"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="Weclome to SuRaksha"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/winfo"
            android:layout_width="match_parent"
            android:background="@layout/border"
            android:layout_height="150dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:textSize="16sp"
            android:maxLines="8"
            android:text="This Application performs best with strong Internet connection and GPS Location switched ON./n
You will be taken to the Help Screen to get a hands on tutorial on how to access this Application."
            android:textColor="#000000" />

        <Button
            android:id="@+id/wgot"
            android:layout_width="120dp"
            android:layout_height="45dp"
            android:layout_gravity="right"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:text="NEXT"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="25dp"
            android:background="@layout/buttonpress"/>
    </LinearLayout>
</RelativeLayout>


