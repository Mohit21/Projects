<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:layout_height="fill_parent" 
    android:layout_width="fill_parent" 
    android:id="@+id/relativelayout1" 
    android:scaleType="matrix"
    xmlns:tools="http://schemas.android.com/tools" 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/bg1"
    tools:context="com.example.suraksha.Update">
<ScrollView 
    android:layout_height="fill_parent" 
    android:layout_width="fill_parent" 
    android:id="@+id/scrollView1" 
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

	<LinearLayout
	    android:layout_height="fill_parent"
	    android:layout_width="fill_parent"
	    android:orientation="vertical"
	    android:layout_marginLeft="12dp"
	    android:layout_marginBottom="12dp"
	    android:layout_marginRight="12dp"
	    android:layout_marginTop="33dp">

	<ImageView
	    android:layout_height="80dp" 
	    android:layout_width="80dp" 
	    android:background="@drawable/ic_launcher"
		android:gravity="center"
		android:layout_gravity="center_horizontal"
	    android:layout_marginTop="40dp"/>

	<EditText 
	    android:id="@+id/uname1"
	    android:layout_height="35dp" 
	    android:layout_width="fill_parent"
		android:background="@layout/border1"
		android:layout_marginTop="5dp"
		android:gravity="center"
		android:hint="Name"
		android:inputType="text"/>

	<EditText 
	    android:id="@+id/uemail1"
	    android:layout_height="35dp" 
	    android:layout_width="fill_parent"
		android:background="@layout/border1"
		android:layout_marginTop="5dp"
		android:gravity="center"
		android:hint="Email"
		android:inputType="textEmailAddress"/>
	
	<EditText 
	    android:id="@+id/upasswrd1"
	    android:layout_height="35dp" 
	    android:layout_width="fill_parent"
		android:background="@layout/border1"
		android:layout_marginTop="5dp"
		android:gravity="center"
		android:hint="Password"
		android:inputType="textPassword"/>
		<EditText
			android:id="@+id/ucnfrmpasswrd1"
			android:layout_height="35dp"
			android:layout_width="fill_parent"
			android:background="@layout/border1"
			android:layout_marginTop="5dp"
			android:gravity="center"
			android:hint="Confirm Password"
			android:inputType="textPassword"/>
		<EditText
			android:id="@+id/umobile1"
			android:layout_height="35dp"
			android:layout_width="fill_parent"
			android:background="@layout/border1"
			android:layout_marginTop="5dp"
			android:gravity="center"
			android:hint="Mobile"
			android:inputType="number"/>

	<Button 
	    android:layout_height="38dp" 
	    android:id="@+id/uregister1"
	    android:layout_width="120dp"
	    android:layout_gravity="center_horizontal" 
	    android:textColor="#000000" 
	    android:text="Submit"
		android:textSize="25dp"
		android:gravity="center"
		android:background="@layout/buttonpress"
	    android:layout_marginTop="20dp"/>
 
	</LinearLayout>
	</ScrollView>
</RelativeLayout>